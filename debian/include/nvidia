include(global_macros)

RUN echo "deb http://deb.debian.org/debian/ stretch contrib non-free" > /etc/apt/sources.list.d/stretch-nonfree.list && \
    APT_UPDATE APT_REDIRECT && \
    APT_INSTALL nvidia-driver APT_REDIRECT && \
    apt-get autoremove -y APT_REDIRECT && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*
